      padding: 16px 20px;
      border-bottom: 1px solid #1a1f25;
      text-decoration: none;
      transition: background 0.1s ease;
    }
    .search-item:last-child {
      border-bottom: none;
    }

    .search-item:hover {
      background: rgba(0, 243, 255, 0.05);
    }

    .search-item h4 {
      margin: 0 0 6px 0;
      color: #fff;
      font-size: 1rem;
      font-weight: 600;
      letter-spacing: -0.02em;
    }
    .search-item p {
      margin: 0;
      color: #999;
      font-size: 0.85rem;
      line-height: 1.5;
      white-space: nowrap;
      overflow: hidden;
