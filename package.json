{
  "name": "helloprompt.kr",
  "type": "module",
  "version": "0.0.4",
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build && mv dist/sitemap-index.xml dist/sitemap.xml",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "prettier --check . && astro check",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "release": "standard-version",
    "deploy": "pnpm lint && pnpm test && git add . && (git commit -m 'chore: auto-commit before deploy' || true) && git push && astro build && pnpm vercel deploy --prod",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/rss": "^4.0.15",
    "@astrojs/sitemap": "^3.7.0",
    "astro": "^5.17.1"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@playwright/test": "^1.58.1",
    "@vite-pwa/astro": "^1.2.0",
    "@vitest/coverage-v8": "^4.0.18",
    "html-validate": "^10.7.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "rehype-rewrite": "^4.0.4",
    "standard-version": "^9.5.0",
    "typescript": "^5.9.3",
    "unist-util-visit": "^5.1.0",
    "vercel": "^50.10.0",
    "vitest": "^4.0.18",
    "workbox-window": "^7.4.0"
  },
  "lint-staged": {
    "*.{js,ts,astro,md}": [
      "prettier --write"
    ]
  }
}
