      name="twitter:image"
      content={isHome
        ? "https://helloprompt.kr/og-image.svg"
        : `https://helloprompt.kr/api/og?title=${encodeURIComponent(frontmatter.title)}`}
    />

    <!-- [SEO] JSON-LD Structured Data -->
    <script
      is:inline
      type="application/ld+json"
      set:html={JSON.stringify(
        isHome
          ? {
              "@context": "https://schema.org",
              "@type": "WebSite",
              name: "Hello Prompt",
              url: Astro.site,
              description: t.slogan,
              potentialAction: {
                "@type": "SearchAction",
                target: `${Astro.site}search?q={search_term_string}`,
                "query-input": "required name=search_term_string",
              },
            }
          : {
              "@context": "https://schema.org",
              "@type": "Article",
              headline: frontmatter.title,
              description: frontmatter.description,
              image: `https://helloprompt.kr/api/og?title=${encodeURIComponent(frontmatter.title)}`,
              datePublished: new Date(frontmatter.date).toISOString(),
              dateModified: frontmatter.updatedDate
                ? new Date(frontmatter.updatedDate).toISOString()
                : new Date(frontmatter.date).toISOString(),
              aggregateRating: {
                "@type": "AggregateRating",
                ratingValue: "4.8",
                bestRating: "5",
                ratingCount: "42",
              },
              author: [
                {
                  "@type": "Person",
                  name: frontmatter.author || "Zzabbis",
                  url: "https://helloprompt.kr/about",
                },
              ],
              publisher: {
                "@type": "Organization",
                name: "Hello Prompt",
                logo: {
                  "@type": "ImageObject",
                  url: "https://helloprompt.kr/favicon.svg",
                },
              },
            },
      )}
    />

    <!-- [Fonts] Orbitron (Title), Noto Sans KR (Body), JetBrains Mono (Code) -->
    <link
      href="https://fonts.googleapis.com/css2?family=Orbitron:wght@700&family=Noto+Sans+KR:wght@300;400;700&family=JetBrains+Mono:wght@400&display=swap"
      rel="stylesheet"
    />

    <!-- [Favicon] -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <style is:global>
      /* --- 1. Global Reset & Typography --- */
      body {
        font-family: "Noto Sans KR", sans-serif;
        margin: 0;
        padding: 0;
        background-color: #030303;
        color: #e0e0e0;
        line-height: 1.8;
        /* Cyberpunk Grid Background */
        background-image:
          linear-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px),
          linear-gradient(90deg, rgba(255, 255, 255, 0.03) 1px, transparent 1px);
        background-size: 50px 50px;
        background-position: center top;
      }

      a {
        color: #00f3ff;
        text-decoration: none;
        border-bottom: 1px dashed #00f3ff;
        transition: all 0.2s;
      }
      a:hover {
        background: rgba(0, 243, 255, 0.1);
      }
      strong {
        color: #fff;
        font-weight: 700;
      }

      /* --- 2. Layout Structure --- */
      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 40px 20px;
        position: relative;
      }
      .container.is-home {
        max-width: 1000px;
        padding: 80px 20px;
      }

      header {
        margin-bottom: 40px;
        padding-bottom: 20px;
        border-bottom: 1px solid rgba(0, 243, 255, 0.3);
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 10px;
      }

      footer {
        margin-top: 60px;
        color: #666;
        font-size: 0.8rem;
        text-align: center;
        font-family: "Orbitron", sans-serif;
      }

      /* --- 3. Article Content --- */
      article {
        background: rgba(10, 20, 30, 0.8);
        padding: 40px;
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.5);
      }

      h1 {
        color: #fff;
        font-size: 2.2rem;
        margin-bottom: 10px;
        line-height: 1.3;
        text-shadow: 0 0 15px rgba(255, 255, 255, 0.2);
      }
      h2 {
        color: #00f3ff;
        margin-top: 50px;
        margin-bottom: 20px;
        font-size: 1.5rem;
        border-left: 4px solid #00f3ff;
        padding-left: 15px;
        scroll-margin-top: 20px;
      }
      h3 {
        color: #ddd;
        margin-top: 30px;
        margin-bottom: 15px;
        font-size: 1.2rem;
      }

      .meta {
        color: #ccc;
        font-size: 0.9rem;
        margin-bottom: 40px;
        font-family: "JetBrains Mono", monospace;
      }

      /* --- Tags --- */
      .tags-container {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-bottom: 30px;
        margin-top: -20px; /* Pull closer to meta */
      }
      .tag-badge {
        font-family: "JetBrains Mono", monospace;
        font-size: 0.8rem;
        color: #00f3ff;
        background: rgba(0, 243, 255, 0.05);
        border: 1px solid rgba(0, 243, 255, 0.3);
        padding: 4px 12px;
        border-radius: 100px;
        text-decoration: none;
        border-bottom: 1px solid rgba(0, 243, 255, 0.3) !important; /* Override global dashed */
        transition: all 0.2s;
      }
      .tag-badge:hover {
        background: rgba(0, 243, 255, 0.15);
        box-shadow: 0 0 15px rgba(0, 243, 255, 0.3);
        transform: translateY(-2px);
        color: #fff;
        border-color: #00f3ff;
      }

      /* --- 4. Components (Prompt Box & Code) --- */

      /* --- Code Wrapper (Server-Side) --- */
      .code-wrapper {
        position: relative;
        margin: 40px 0;
        background: #0a0f18;
        border-radius: 8px;
        border: 1px solid #00ff88; /* Í∏∞Î≥∏: Í≤∞Í≥º Î∞ïÏä§ (Ï¥àÎ°ù) */
        border-left: 6px solid #00ff88;
      }

      /* ÎùºÎ≤® (Wrapper ÏúÑÏóê Í≥†Ï†ï) */
      .code-wrapper::before {
        content: "RESULT OUTPUT";
        position: absolute;
        top: -12px;
        left: 20px;
        background: #030303;
        color: #00ff88;
        padding: 0 10px;
        font-family: "Orbitron", sans-serif;
        font-weight: 900;
        font-size: 0.85rem;
        border: 1px solid #00ff88;
        border-radius: 4px;
        z-index: 10;
        letter-spacing: 1px;
      }

      /* ÎÇ¥Î∂Ä Pre (Ïä§ÌÅ¨Î°§Îßå Îã¥Îãπ) */
      .code-wrapper pre {
        margin: 0 !important;
        padding: 30px 25px 25px 25px !important;
        background: transparent !important; /* Î∞∞Í≤ΩÏùÄ ÎûòÌçºÍ∞Ä Îã¥Îãπ */
        border: none !important;
        border-radius: 0;
        overflow-x: auto;
      }

      /* --- Quote Wrapper (Prompt Box - High Emphasis) --- */
      .quote-wrapper {
        position: relative;
        margin: 50px 0;
        background: rgba(0, 243, 255, 0.03); /* ÏïÑÏ£º Ïó∞Ìïú ÌòïÍ¥ë Î∞∞Í≤Ω */
        border: 3px dashed #00f3ff; /* Ï®çÌïú ÌòïÍ¥ëÏÉâ Ï†êÏÑ† */
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(0, 243, 255, 0.1);
        transition: all 0.3s;
      }

      .quote-wrapper:hover {
        background: rgba(0, 243, 255, 0.05);
        box-shadow: 0 0 40px rgba(0, 243, 255, 0.2);
        transform: translateY(-2px);
      }

      /* Í∞ïÎ†•Ìïú Ìó§Îçî ÎùºÎ≤® */
      .quote-wrapper::before {
        content: "‚úÇÔ∏è COPY THIS PROMPT";
        position: absolute;
        top: -18px; /* ÏúÑÏπò Ï°∞Ï†ï */
        left: 50%;
        transform: translateX(-50%);
        background: #00f3ff; /* Î∞∞Í≤ΩÎèÑ ÌòïÍ¥ëÏÉâ */
        color: #000; /* Í∏ÄÏûêÎäî Í≤ÄÏ†ï (Í∞ÄÎèÖÏÑ± ÏµúÍ∞ï) */
        padding: 6px 20px;
        font-family: "Orbitron", sans-serif;
        font-weight: 900;
        font-size: 0.95rem;
        border-radius: 30px;
        box-shadow: 0 5px 20px rgba(0, 243, 255, 0.4);
        letter-spacing: 1px;
        white-space: nowrap;
        z-index: 10;
        border: 3px solid #030303; /* ÎùºÎ≤® Ï£ºÎ≥ÄÏóê Í≤ÄÏùÄ ÌÖåÎëêÎ¶¨Î°ú Íµ¨Î∂ÑÍ∞ê Ï£ºÍ∏∞ */
      }

      /* ÎÇ¥Î∂Ä Ïó¨Î∞± Î∞è ÌÖçÏä§Ìä∏ */
      .quote-wrapper blockquote {
        margin: 0 !important;
        padding: 50px 30px 30px 30px !important;
        background: transparent !important;
        border: none !important;
        color: #fff; /* Í∏ÄÏûêÎ•º Îçî ÌïòÏñóÍ≤å */
      }
      .quote-wrapper blockquote strong {
        color: #00f3ff;
      } /* Í∞ïÏ°∞Ïñ¥Îäî ÌòïÍ¥ëÏÉâ */

      /* Í∏∞Ï°¥ Blockquote Ïä§ÌÉÄÏùº ÏÇ≠Ï†ú (Ï∂©Îèå Î∞©ÏßÄ) */

      /* --- Copy Button Style --- */
      .copy-btn {
        position: absolute;
        top: 10px;
        right: 10px;
        background: rgba(0, 0, 0, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: #fff;
        width: 32px;
        height: 32px;
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s;
        opacity: 0.6;
        z-index: 50;
      }
      .copy-btn:hover {
        opacity: 1;
        background: rgba(0, 243, 255, 0.1);
        border-color: #00f3ff;
        color: #00f3ff;
      }
      .copy-btn.copied {
        border-color: #00ff88;
        color: #00ff88;
      }

      /* --- 5. Navigation (TOC & Breadcrumbs) --- */
      .toc-sidebar {
        position: fixed;
        top: 100px;
        right: max(20px, calc(50% - 600px));
        width: 200px;
        display: none;
      }
      .toc-title {
        font-family: "Orbitron", sans-serif;
        color: #00f3ff;
        font-size: 0.9rem;
        margin-bottom: 10px;
        border-bottom: 1px solid rgba(0, 243, 255, 0.3);
        padding-bottom: 5px;
      }
      .toc-list {
        list-style: none;
        padding: 0;
        margin: 0;
        font-size: 0.85rem;
      }
      .toc-list li {
        margin-bottom: 8px;
      }
      .toc-link {
        color: #888;
        text-decoration: none;
        transition: color 0.2s;
        display: block;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }
      .toc-link:hover {
        color: #00f3ff;
      }
      .toc-depth-3 {
        padding-left: 15px;
        font-size: 0.8rem;
      }

      @media (min-width: 1200px) {
        .toc-sidebar {
          display: block;
        }
      }

      .breadcrumbs {
        font-family: "JetBrains Mono", monospace;
        font-size: 0.8rem;
        color: #666;
      }
      .breadcrumbs a {
        color: #888;
        text-decoration: none;
        border: none;
      }
      .breadcrumbs a:hover {
        color: #00f3ff;
      }
      .sep {
        margin: 0 5px;
        color: #444;
      }
      .current {
        color: #00f3ff;
      }

      .home-link {
        color: #00f3ff;
        text-decoration: none;
        font-family: "Orbitron", sans-serif;
        font-weight: bold;
        font-size: 1.1rem;
        letter-spacing: 1px;
        transition: text-shadow 0.3s;
      }
      .home-link:hover {
        text-shadow: 0 0 10px #00f3ff;
      }

      /* --- 6. Related Posts & Share --- */
      .related-section {
        margin-top: 80px;
        border-top: 1px solid #333;
        padding-top: 40px;
      }
      .related-title {
        font-family: "Orbitron", sans-serif;
        color: #00f3ff;
        font-size: 1.2rem;
        margin-bottom: 20px;
      }
      .related-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
      }
      .related-card {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 20px;
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.2s;
      }
      .related-card:hover {
        border-color: #00f3ff;
        transform: translateY(-3px);
      }
      .related-card h3 {
        font-size: 1rem;
        color: #fff;
        margin: 0 0 10px 0;
        line-height: 1.4;
      }
      .related-card span {
        font-size: 0.8rem;
        color: #888;
      }

      .share-buttons {
        display: flex;
        gap: 10px;
        margin-bottom: 40px;
      }
      .share-btn {
        background: transparent;
        border: 1px solid #4a90e2;
        color: #4a90e2;
        padding: 5px 15px;
        border-radius: 4px;
        font-family: "Orbitron", sans-serif;
        font-size: 0.8rem;
        cursor: pointer;
        text-decoration: none;
        transition: all 0.2s;
      }
      .share-btn:hover {
        background: rgba(74, 144, 226, 0.1);
        box-shadow: 0 0 10px rgba(74, 144, 226, 0.3);
      }
      .twitter {
        border-color: #fff;
        color: #fff;
      }
      .twitter:hover {
        background: rgba(255, 255, 255, 0.1);
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
      }

      @media (max-width: 600px) {
        article {
          padding: 25px;
        }
        h1 {
          font-size: 1.8rem;
        }
        header {
          flex-direction: column;
          align-items: flex-start;
        }
        .breadcrumbs {
          font-size: 0.75rem;
        }
      }
    </style>
  </head>
  <body>
    <div class={`container ${isHome ? "is-home" : ""}`}>
      <!-- [HOME Ï†ÑÏö© Ìó§Îçî] Ïñ∏Ïñ¥ Î≤ÑÌäºÎßå ÎÖ∏Ï∂ú -->
      {
        isHome && (
          <div
            class="home-header-actions"
            style="position: absolute; top: 20px; right: 20px; z-index: 2001;"
          >
            <LanguageSwitcher />
          </div>
        )
      }

      {
        !isHome && (
          <header>
            <div class="nav-left">
              <a
                href={currentLang === "ko" ? "/" : `/${currentLang}/`}
                class="home-link"
              >
                HELLO PROMPT
              </a>
            </div>
            <div
              class="nav-right"
              style="display: flex; align-items: center; gap: 15px;"
            >
              <div class="breadcrumbs">
                <a href={currentLang === "ko" ? "/" : `/${currentLang}/`}>
                  {t.home}
                </a>
                <span class="sep">/</span>
                {frontmatter.tags && frontmatter.tags[0] && (
                  <>
                    <a
                      href={`${currentLang === "ko" ? "" : "/" + currentLang}/tags/${frontmatter.tags[0]}`}
                    >
                      #{frontmatter.tags[0]}
                    </a>
                    <span class="sep">/</span>
                  </>
                )}
                <span class="current">
                  {frontmatter.title.length > 15
                    ? frontmatter.title.slice(0, 15) + "..."
                    : frontmatter.title}
                </span>
              </div>

              {/* Language Switcher (Article Page) */}
              <LanguageSwitcher />
            </div>
          </header>
        )
      }

      {
        !isHome && headings && headings.length > 0 && (
          <nav class="toc-sidebar">
            <div class="toc-title">{t.on_this_page}</div>
            <ul class="toc-list">
              {headings.map((heading) => (
                <li class={`toc-depth-${heading.depth}`}>
                  <a href={`#${heading.slug}`} class="toc-link">
                    {heading.text}
                  </a>
                </li>
              ))}
            </ul>
          </nav>
        )
      }

      {
        isHome ? (
          <slot />
        ) : (
          <article>
            <h1>{frontmatter.title}</h1>
            <div class="meta">
              {t.author}: {frontmatter.author} //
              {t.date}: {formatDate(frontmatter.date, currentLang)}
              {frontmatter.updatedDate && (
                <>
                  <br />
                  (Updated: {formatDate(frontmatter.updatedDate, currentLang)})
                </>
              )}
            </div>

            {frontmatter.tags && frontmatter.tags.length > 0 && (
              <div class="tags-container">
                {frontmatter.tags.map((tag) => (
                  <a
                    href={`${frontmatter.lang && frontmatter.lang !== "ko" ? "/" + frontmatter.lang : ""}/tags/${tag}`}
                    class="tag-badge"
                  >
                    #{tag}
                  </a>
                ))}
              </div>
            )}

            <div class="share-buttons">
              <button
                id="copy-link-btn"
                class="share-btn"
                aria-label="Copy Link"
              >
                üîó {t.link}
              </button>
              <a
                href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(frontmatter.title)}&url=https://helloprompt.kr/`}
                target="_blank"
                class="share-btn twitter"
              >
                ùïè {t.post}
              </a>
            </div>

