{
  "name": "helloprompt.kr",
  "type": "module",
  "engines": {
    "node": ">=24.13.0"
  },
  "version": "0.0.11",
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "prettier --check . && astro check",
    "qa": "npx tsx scripts/qa/check.ts",
    "docs:update": "npx tsx scripts/update-management.ts",
    "content:fix": "node scripts/fix-placeholders.js && node scripts/fill-empty-sections.js",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "release": "standard-version",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/rss": "^4.0.15",
    "@astrojs/sitemap": "^3.7.0",
    "@vercel/og": "^0.8.6",
    "astro": "^5.17.1",
    "fuse.js": "^7.1.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@playwright/test": "^1.58.1",
    "@vite-pwa/astro": "^1.2.0",
    "@vitest/coverage-v8": "^4.0.18",
    "glob": "^13.0.1",
    "html-validate": "^10.7.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "rehype-rewrite": "^4.0.4",
    "standard-version": "^9.5.0",
    "typescript": "^5.9.3",
    "unist-util-visit": "^5.1.0",
    "vitest": "^4.0.18",
    "workbox-window": "^7.4.0"
  },
  "lint-staged": {
    "*.{js,ts,astro,md}": [
      "prettier --write"
    ],
    "src/pages/**/*.md": [
      "pnpm qa"
    ]
  }
}
