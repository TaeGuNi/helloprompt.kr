---
import BaseHtml from "../components/BaseHtml.astro";
import {
  filterPublishedPosts,
  getRandomPosts,
  type Post,
} from "../utils/postUtils";

// 1. 모든 포스트 가져오기 (한국어 + 다국어)
const koPosts = Object.values(
  import.meta.glob("./posts/*.md", { eager: true }),
) as Post[];

const otherPosts = Object.values(
  import.meta.glob("./*/posts/*.md", { eager: true }),
) as Post[];

// 2. 언어별로 그룹화 및 랜덤 4개 선정
const postsByLang: Record<
  string,
  { title: string; description: string; url: string }[]
> = {};

// 한국어 처리
postsByLang["ko"] = getRandomPosts(filterPublishedPosts(koPosts), 4).map(
  (p) => ({
    title: p.frontmatter.title,
    description: p.frontmatter.description,
    url: p.url,
  }),
);

// 다국어 처리
const groupedOthers: Record<string, Post[]> = {};
otherPosts.forEach((post) => {
  // URL 구조: /en/posts/slug or /src/pages/en/posts/slug.md
  // 파일 경로에서 언어 코드 추출
  // post.file 예시: /Users/.../src/pages/en/posts/abc.md
  const match = post.file.match(/\/pages\/([a-z]{2})\/posts\//);
  if (match && match[1]) {
    const lang = match[1];
    if (!groupedOthers[lang]) groupedOthers[lang] = [];
    groupedOthers[lang].push(post);
  }
});

for (const [lang, posts] of Object.entries(groupedOthers)) {
  postsByLang[lang] = getRandomPosts(filterPublishedPosts(posts), 4).map(
    (p) => ({
      title: p.frontmatter.title,
      description: p.frontmatter.description,
      url: p.url,
    }),
  );
}

// 3. UI 번역 데이터
const uiStrings = {
  ko: {
    title: "404",
    msg: "SYSTEM ERROR: 페이지를 찾을 수 없습니다.",
    btn: "홈으로 복귀",
    rec: "추천 인텔리전스",
  },
  en: {
    title: "404",
    msg: "SYSTEM ERROR: Page Not Found",
    btn: "RETURN HOME",
    rec: "RECOMMENDED INTELLIGENCE",
  },
  ja: {
    title: "404",
    msg: "SYSTEM ERROR: ページが見つかりません",
    btn: "ホームに戻る",
    rec: "推奨インテリジェンス",
  },
  zh: {
    title: "404",
    msg: "SYSTEM ERROR: 页面未找到",
    btn: "返回首页",
    rec: "推荐情报",
  },
  es: {
    title: "404",
    msg: "SYSTEM ERROR: Página no encontrada",
    btn: "VOLVER AL INICIO",
    rec: "INTELIGENCIA RECOMENDADA",
  },
  fr: {
    title: "404",
    msg: "SYSTEM ERROR: Page non trouvée",
    btn: "RETOUR À L'ACCUEIL",
    rec: "INTELLIGENCE RECOMMANDÉE",
  },
  de: {
    title: "404",
    msg: "SYSTEM ERROR: Seite nicht gefunden",
    btn: "ZURÜCK ZUR STARTSEITE",
    rec: "EMPFOHLENE INTELLIGENZ",
  },
  it: {
    title: "404",
    msg: "SYSTEM ERROR: Pagina non trovata",
    btn: "TORNA ALLA HOME",
    rec: "INTELLIGENZA RACCOMANDATA",
  },
  ru: {
    title: "404",
    msg: "SYSTEM ERROR: Страница не найдена",
    btn: "ВЕРНУТЬСЯ НА ГЛАВНУЮ",
    rec: "РЕКОМЕНДУЕМЫЙ ИНТЕЛЛЕКТ",
  },
  pt: {
    title: "404",
    msg: "SYSTEM ERROR: Página não encontrada",
    btn: "VOLTAR AO INÍCIO",
    rec: "INTELIGÊNCIA RECOMENDADA",
  },
};
---

<BaseHtml lang="ko">
  <head>
    <meta charset="utf-8" />
    <title>404 Not Found | Hello Prompt</title>
    <meta name="viewport" content="width=device-width" />
    <link
      href="https://fonts.googleapis.com/css2?family=Orbitron:wght@700&family=Noto+Sans+KR:wght@400;700&family=JetBrains+Mono:wght@400&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Orbitron", sans-serif;
        margin: 0;
        padding: 0;
        background-color: #030303;
        color: #00f3ff;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        background-image:
          linear-gradient(rgba(0, 243, 255, 0.03) 1px, transparent 1px),
          linear-gradient(90deg, rgba(0, 243, 255, 0.03) 1px, transparent 1px);
        background-size: 30px 30px;
        overflow-x: hidden;
        padding-bottom: 50px;
      }

      h1 {
        font-size: 8rem;
        margin: 0;
        text-shadow: 0 0 20px #00f3ff;
        animation: glitch 1s linear infinite;
      }

      p {
        font-family: "Noto Sans KR", sans-serif;
        font-size: 1.5rem;
        color: #ccc;
        margin-bottom: 40px;
      }

      .btn {
        background: transparent;
        color: #00f3ff;
        border: 2px solid #00f3ff;
        padding: 15px 30px;
        font-size: 1.2rem;
        text-decoration: none;
        font-weight: bold;
        transition: all 0.3s;
      }
      .btn:hover {
        background: #00f3ff;
        color: #000;
        box-shadow: 0 0 30px rgba(0, 243, 255, 0.5);
      }

      @keyframes glitch {
        2%,
        64% {
          transform: translate(2px, 0) skew(0deg);
        }
        4%,
        60% {
          transform: translate(-2px, 0) skew(0deg);
        }
        62% {
          transform: translate(0, 0) skew(5deg);
        }
      }

      .recommendation-section {
        margin-top: 100px;
        width: 100%;
        max-width: 900px;
        text-align: left;
        padding: 0 20px;
        box-sizing: border-box;
        display: none; /* JS로 활성화 */
      }

      .rec-title {
        font-family: "Orbitron", sans-serif;
        color: #00f3ff;
        font-size: 1.2rem;
        margin-bottom: 25px;
        border-bottom: 1px solid rgba(0, 243, 255, 0.3);
        padding-bottom: 10px;
        text-transform: uppercase;
        letter-spacing: 1px;
      }

      .post-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 20px;
      }

      .post-card {
        background: rgba(10, 20, 30, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 25px;
        text-decoration: none;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        backdrop-filter: blur(5px);
        position: relative;
        overflow: hidden;
      }

      .post-card:hover {
        transform: translateY(-5px);
        border-color: #00f3ff;
        box-shadow: 0 5px 20px rgba(0, 243, 255, 0.15);
      }

      .post-card h3 {
        color: #fff;
        margin: 0 0 10px 0;
        font-size: 1.1rem;
        line-height: 1.4;
        font-weight: 700;
        font-family: "Noto Sans KR", sans-serif;
      }

      .post-card p {
        font-family: "Noto Sans KR", sans-serif;
        font-size: 0.9rem;
        color: #888;
        margin: 0;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        line-height: 1.6;
      }

      @media (max-width: 600px) {
        h1 {
          font-size: 5rem;
        }
        p {
          font-size: 1.2rem;
        }
        .recommendation-section {
          margin-top: 60px;
        }
      }
    </style>
  </head>
  <body>
    <h1 id="error-title">404</h1>
    <p id="error-msg">SYSTEM ERROR: 페이지를 찾을 수 없습니다.</p>
    <a href="/" id="error-btn" class="btn">RETURN HOME</a>

    <div id="rec-section" class="recommendation-section">
      <div id="rec-title" class="rec-title">RECOMMENDED INTELLIGENCE</div>
      <div id="rec-grid" class="post-grid">
        <!-- JS로 주입 -->
      </div>
    </div>

    <script
      is:inline
      define:vars={{
        uiStrings,
        postsByLang,
      }}
    >
      (function () {
        // 1. URL에서 언어 감지
        const path = window.location.pathname;
        const segments = path.split("/").filter(Boolean);
        const firstSegment = segments[0];

        // 지원 언어 목록 (UI 문자열 키 기반)
        const supportedLangs = Object.keys(uiStrings);
        const currentLang = supportedLangs.includes(firstSegment)
          ? firstSegment
          : "ko";

        // 2. UI 텍스트 업데이트
        const ui = uiStrings[currentLang] || uiStrings["ko"];
        const titleEl = document.getElementById("error-title");
        const msgEl = document.getElementById("error-msg");
        const btnEl = document.getElementById("error-btn");
        const recSection = document.getElementById("rec-section");
        const recTitle = document.getElementById("rec-title");
        const recGrid = document.getElementById("rec-grid");

        if (titleEl) titleEl.textContent = ui.title;
        if (msgEl) msgEl.textContent = ui.msg;
        if (btnEl) {
          btnEl.textContent = ui.btn;
          btnEl.href = currentLang === "ko" ? "/" : `/${currentLang}/`;
        }
        if (recTitle) recTitle.textContent = ui.rec;

        // 3. 추천 포스트 렌더링
        const posts = postsByLang[currentLang] || postsByLang["ko"] || [];

        if (posts.length > 0 && recGrid) {
          recGrid.innerHTML = posts
            .map(
              (post) => `
            <a href="${post.url}" class="post-card">
              <h3>${post.title}</h3>
              <p>${post.description}</p>
            </a>
          `,
            )
            .join("");
          if (recSection) recSection.style.display = "block";
        }
      })();
    </script>
  </body>
</BaseHtml>
