---
import type { Page } from "astro";
import Layout from "../../layouts/Layout.astro";
import { LANGUAGES } from "../../i18n/languages";
import { formatDate } from "../../utils/dateUtils";
import type { Post } from "../../utils/postUtils";
import Search from "../../components/Search.astro";
import { getCollection } from "astro:content";

export const prerender = true;

interface GetStaticPathsOptions {
  paginate: (
    // eslint-disable-next-line @typescript-eslint/no-explicit-any
    data: any[],
    options: { params: { lang: string }; pageSize: number },
  ) => unknown[];
}

interface Props {
  page: Page<Post>;
}

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
  const allPosts = await getCollection("posts");

  return LANGUAGES.flatMap((lang) => {
    const langPosts = allPosts.filter((p) => p.id.startsWith(`${lang}/`));

    const sortedPosts = langPosts.sort(
      (a, b) => b.data.date.valueOf() - a.data.date.valueOf(),
    );

    const formattedPosts = sortedPosts.map((post) => ({
      frontmatter: {
        ...post.data,
        date: new Date(post.data.date).toISOString(),
        tags: post.data.tags,
      },
      url: `/${lang}/posts/${post.id.replace(new RegExp(`^${lang}/`), "").replace(/\.md$/, "")}`,
    }));

    return paginate(formattedPosts, {
      params: { lang },
      pageSize: 12,
    });
  });
}

const { page } = Astro.props as Props;
const { lang } = Astro.params;

// 다국어 슬로건
const SLOGANS: Record<string, string> = {
  en: "The Friendliest AI Guide for Beginners",
  es: "La guía de IA más amable para principiantes",
  ja: "AI初心者のための最も親切なガイド",
  zh: "为AI初学者准备的最贴心指南",
  fr: "Le guide IA le plus convivial pour les débutants",
  de: "Der freundlichste KI-Leitfaden für Anfänger",
  pt: "O guia de IA mais amigável para iniciantes",
  ru: "Самое дружелюбное руководство по ИИ для новичков",
  it: "La guida AI più amichevole per principianti",
};

const currentSlogan =
  SLOGANS[lang as string] || "The Friendliest AI Guide for Beginners";

const frontmatter = {
  title: "HOME",
  description: currentSlogan,
  date: new Date().toISOString().split("T")[0],
  author: "Jay & ZZABBIS",
  lang: lang as string,
};
---

<Layout frontmatter={frontmatter} isHome={true}>
  <!-- HERO -->
  <div class="hero">
    <h1 class="ai-title">HELLO PROMPT</h1>
    <div class="tech-line"></div>
    <p class="subtitle">{currentSlogan}</p>

    <!-- 검색창 -->
    <Search variant="hero" />
  </div>

  <style is:global>
    /* Global styles if needed, mostly handled by component */
  </style>

  <!-- POST LIST (Card Grid Style) -->
  <div class="grid-label">
    <span>LATEST INTELLIGENCE</span>
    <span class="grid-count">PAGE {page.currentPage} / {page.lastPage}</span>
  </div>

  <div class="post-grid">
    {
      page.data.map((post: Post) => (
        <a href={post.url} class="post-card">
          <h2>{post.frontmatter.title}</h2>
          <p>{post.frontmatter.description}</p>
          <div class="post-meta">
            <span>
              {formatDate(post.frontmatter.date, lang as string, {
                dateOnly: true,
              })}
            </span>
            {post.frontmatter.tags &&
              post.frontmatter.tags
                .slice(0, 2)
                .map((tag: string) => <span class="tag-pill">#{tag}</span>)}
          </div>
        </a>
      ))
    }
  </div>

  <!-- 페이지네이션 컨트롤 -->
  <div class="pagination">
    {
      page.url.prev ? (
        <a href={page.url.prev} class="nav-btn">
          &lt; PREV
        </a>
      ) : null
    }
    <span class="nav-info">{page.currentPage} / {page.lastPage}</span>
    {
      page.url.next ? (
        <a href={page.url.next} class="nav-btn">
          NEXT &gt;
        </a>
      ) : null
    }
  </div>
</Layout>

<style>
  /* --- HERO SECTION (Refined) --- */
  .hero {
    margin-bottom: 120px; /* 하단 여백 대폭 추가 */
    position: relative;
    text-align: center;
    padding-top: 60px; /* 상단 여백 추가 */
    display: flex;
    flex-direction: column;
    align-items: center; /* 확실한 중앙 정렬 */
  }

  .ai-title {
    font-family: "Orbitron", sans-serif;
    font-size: 5rem; /* PC에서 더 크게 */
    font-weight: 900;
    letter-spacing: 4px;
    margin: 0 0 30px 0;
    line-height: 1.1;
    color: #fff;
    text-transform: uppercase;

    /* 네온 효과 강화 */
    text-shadow: 0 0 30px rgba(0, 243, 255, 0.4);
    background: linear-gradient(180deg, #fff, #aaa); /* 메탈릭 그라데이션 */
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .tech-line {
    width: 150px;
    height: 4px;
    background: #00f3ff;
    margin: 0 auto 30px; /* 중앙 정렬 및 여백 */
    box-shadow: 0 0 20px #00f3ff;
    border-radius: 2px;
  }

  p.subtitle {
    font-size: 1.4rem;
    color: #ccc;
    margin: 0 0 60px 0; /* 검색창과의 간격 */
    font-weight: 300;
    letter-spacing: 1px;
    opacity: 0.8;
  }

  @media (max-width: 768px) {
    .ai-title {
      font-size: 3rem;
      letter-spacing: 1px;
    }
    .hero {
      margin-bottom: 80px;
      padding-top: 40px;
    }
    p.subtitle {
      font-size: 1.1rem;
      margin-bottom: 40px;
    }
  }

  /* --- POST GRID SECTION --- */
  .grid-label {
    text-align: left;
    font-family: "Orbitron", sans-serif;
    color: #00f3ff;
    font-size: 1.2rem;
    margin-bottom: 20px;
    border-bottom: 1px solid rgba(0, 243, 255, 0.3);
    padding-bottom: 10px;
    display: flex;
    justify-content: space-between;
  }
  .grid-count {
    background: #00f3ff;
    color: #000;
    padding: 2px 8px;
    border-radius: 4px;
    font-size: 0.8rem;
  }

  .post-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 25px;
    text-align: left;
  }

  .post-card {
    background: rgba(10, 20, 30, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 25px;
    transition: all 0.3s ease;
    text-decoration: none;
    display: flex;
    flex-direction: column;
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(5px);
  }

  .post-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: #333;
    transition: background 0.3s;
  }

  .post-card:hover {
    transform: translateY(-5px);
    border-color: #00f3ff;
    box-shadow: 0 5px 20px rgba(0, 243, 255, 0.15);
  }
  .post-card:hover::before {
    background: #00f3ff;
  }

  .post-card h2 {
    color: #fff;
    font-size: 1.2rem;
    margin: 0 0 10px 0;
    font-weight: 700;
    line-height: 1.4;
  }

  .post-card p {
    color: #aaa;
    font-size: 0.9rem;
    flex-grow: 1;
    margin-bottom: 20px;
  }

  .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.8rem;
    font-family: "JetBrains Mono", monospace;
    color: #666;
  }

  .tag-pill {
    background: rgba(0, 243, 255, 0.1);
    color: #00f3ff;
    padding: 2px 8px;
    border-radius: 4px;
    border: 1px solid rgba(0, 243, 255, 0.2);
  }

  /* --- PAGINATION --- */
  .pagination {
    margin-top: 60px;
    display: flex;
    justify-content: center;
    gap: 20px;
  }
  .nav-btn {
    background: transparent;
    border: 1px solid #00f3ff;
    color: #00f3ff;
    padding: 10px 20px;
    text-decoration: none;
    font-family: "Orbitron", sans-serif;
    font-size: 0.9rem;
    border-radius: 4px;
    transition: all 0.2s;
  }
  .nav-btn:hover {
    background: #00f3ff;
    color: #000;
    box-shadow: 0 0 15px rgba(0, 243, 255, 0.4);
  }
  .nav-info {
    color: #666;
    font-family: "JetBrains Mono", monospace;
    align-self: center;
  }

  @media (max-width: 600px) {
    .ai-title {
      font-size: 2.5rem;
    }
  }
</style>
