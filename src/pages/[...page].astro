---
import Layout from "../layouts/Layout.astro";
import type { Post } from "../utils/postUtils";
import { formatDate } from "../utils/dateUtils";
import Search from "../components/Search.astro";

interface Page<T = Post> {
  data: T[];
  start: number;
  end: number;
  total: number;
  currentPage: number;
  size: number;
  lastPage: number;
  url: {
    current: string;
    prev: string | undefined;
    next: string | undefined;
  };
}

interface GetStaticPathsOptions {
  paginate: (data: Post[], options: { pageSize: number }) => unknown[];
}

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
  // 1. ÌïúÍµ≠Ïñ¥ Ìè¨Ïä§Ìä∏Îßå Í∞ÄÏ†∏Ïò§Í∏∞ (eager load)
  const krPosts = Object.values(
    import.meta.glob("./posts/*.md", { eager: true }),
  ) as Post[];

  // 2. ÎÇ†ÏßúÏàú Ï†ïÎ†¨
  const sortedPosts = krPosts.sort(
    (a, b) =>
      new Date(b.frontmatter.date).valueOf() -
      new Date(a.frontmatter.date).valueOf(),
  );

  // 3. ÌéòÏù¥ÏßÄÎÑ§Ïù¥ÏÖò (Î£®Ìä∏ Í≤ΩÎ°ú /)
  return paginate(sortedPosts, { pageSize: 12 });
}

const { page } = Astro.props as { page: Page<Post> };

// --- ÌÉúÍ∑∏ ÏßëÍ≥Ñ Î°úÏßÅ Ï∂îÍ∞Ä ---
const allPosts = Object.values(
  import.meta.glob("./posts/*.md", { eager: true }),
) as Post[];

const tagCounts: Record<string, number> = {};
allPosts.forEach((post) => {
  if (post.frontmatter.tags) {
    post.frontmatter.tags.forEach((tag) => {
      tagCounts[tag] = (tagCounts[tag] || 0) + 1;
    });
  }
});

const popularTags = Object.entries(tagCounts)
  .sort(([, a], [, b]) => b - a) // ÎπàÎèÑÏàò ÎÇ¥Î¶ºÏ∞®Ïàú Ï†ïÎ†¨
  .slice(0, 10) // ÏÉÅÏúÑ 10Í∞úÎßå Ï∂îÏ∂ú
  .map(([tag]) => tag);

const frontmatter = {
  title: "HOME",
  description: "AIÍ∞Ä ÎÇØÏÑ† ÎãπÏã†ÏùÑ ÏúÑÌïú Í∞ÄÏû• ÏπúÏ†àÌïú Í∞ÄÏù¥Îìú",
  date: new Date().toISOString().split("T")[0],
  author: "Jay & ZZABBIS",
};
---

<Layout frontmatter={frontmatter} isHome={true}>
  <!-- HERO -->
  <div class="hero">
    <h1 class="ai-title">HELLO PROMPT</h1>
    <div class="tech-line"></div>
    <p class="subtitle">AIÍ∞Ä ÎÇØÏÑ† ÎãπÏã†ÏùÑ ÏúÑÌïú Í∞ÄÏû• ÏπúÏ†àÌïú Í∞ÄÏù¥Îìú</p>

    <!-- Í≤ÄÏÉâÏ∞Ω -->
    <Search variant="hero" />

    <!-- üî• POPULAR TAGS (New Section) -->
    <div class="popular-tags">
      <span class="tag-label">üî• TRENDING:</span>
      <div class="tag-list">
        {
          popularTags.map((tag) => (
            <a href={`/tags/${tag}`} class="pop-tag">
              #{tag}
            </a>
          ))
        }
      </div>
    </div>
  </div>

  <style is:global>
    /* ... (Í∏∞Ï°¥ Í≤ÄÏÉâ Ïä§ÌÉÄÏùº Ïú†ÏßÄ) ... */

    /* Post Grid & Other Styles will remain, but search styles are removed as they are now in the component */
  </style>

  <!-- POST LIST (Card Grid Style) -->
  <div class="grid-label">
    <span>LATEST INTELLIGENCE</span>
    <span class="grid-count">PAGE {page.currentPage} / {page.lastPage}</span>
  </div>

  <div class="post-grid">
    {
      page.data.map((post) => (
        <a href={post.url} class="post-card">
          <h2>{post.frontmatter.title}</h2>
          <p>{post.frontmatter.description}</p>
          <div class="post-meta">
            <span>
              {formatDate(post.frontmatter.date, "ko", { dateOnly: true })}
            </span>
            {post.frontmatter.tags &&
              post.frontmatter.tags
                .slice(0, 2)
                .map((tag) => <span class="tag-pill">#{tag}</span>)}
          </div>
        </a>
      ))
    }
  </div>

  <!-- ÌéòÏù¥ÏßÄÎÑ§Ïù¥ÏÖò Ïª®Ìä∏Î°§ -->
  <div class="pagination">
    {
      page.url.prev ? (
        <a href={page.url.prev} class="nav-btn">
          &lt; PREV
        </a>
      ) : null
    }
    <span class="nav-info">{page.currentPage} / {page.lastPage}</span>
    {
      page.url.next ? (
        <a href={page.url.next} class="nav-btn">
          NEXT &gt;
        </a>
      ) : null
    }
  </div>

  <script is:inline>
    document.addEventListener("DOMContentLoaded", () => {
      // @ts-expect-error -- External script
      const trackEvent = (action, params) => {
        // @ts-expect-error -- External script
        if (typeof window.gtag === "function") {
          // @ts-expect-error -- External script
          window.gtag("event", action, params);
        }
      };

      // Popular Tags Tracking
      const popTags = document.querySelectorAll(".pop-tag");
      popTags.forEach((tag) => {
        tag.addEventListener("click", (e) => {
          const target = e.target;
          // @ts-expect-error -- External script
          const tagName = target.innerText || target.textContent;
          trackEvent("click_tag", {
            tag_name: tagName,
            location: "home_trending",
          });
        });
      });
    });
  </script>
</Layout>

<style>
  /* --- HERO SECTION (Refined) --- */
  .hero {
    margin-bottom: 80px; /* Ïó¨Î∞± Ï°∞Ï†ï */
    position: relative;
    text-align: center;
    padding-top: 60px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  /* ... (Í∏∞Ï°¥ Ïä§ÌÉÄÏùº Ïú†ÏßÄ) ... */
  .ai-title {
