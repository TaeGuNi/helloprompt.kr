{
  "name": "helloprompt.kr",
  "type": "module",
  "engines": {
    "node": ">=24.13.0"
  },
  "version": "1.7.0",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "prettier --check . && eslint .",
    "qa:rewrite": "npx tsx scripts/qa/ai-rewriter.ts",
    "docs:update": "npx tsx scripts/update-management.ts",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "release": "npx tsx scripts/release.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/rss": "^4.0.15",
    "@astrojs/sitemap": "^3.7.0",
    "@vercel/og": "^0.8.6",
    "astro": "^5.17.1",
    "fuse.js": "^7.1.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@playwright/test": "^1.58.1",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vite-pwa/astro": "^1.2.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-plugin-astro": "^1.5.0",
    "glob": "^13.0.1",
    "html-validate": "^10.7.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "rehype-rewrite": "^4.0.4",
    "standard-version": "^9.5.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "unist-util-visit": "^5.1.0",
    "vitest": "^4.0.18",
    "workbox-window": "^7.4.0"
  },
  "lint-staged": {
    "*.{js,ts,astro,json,cjs,mjs,css,html,yaml,yml,md}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "vitest related --run"
    ],
    "src/pages/**/*.md": [
      "node scripts/fix-placeholders.js",
      "node scripts/fill-empty-sections.js",
      "pnpm qa"
    ]
  }
}
