  <script>
    /**
     * ê²€ìƒ‰ ê¸°ëŠ¥ ì œì–´ ìŠ¤í¬ë¦½íŠ¸
     * - Fuse.jsë¥¼ ì´ìš©í•œ Fuzzy Search (ì˜¤íƒ€ ë³´ì •, ê°€ì¤‘ì¹˜ ì ìš©)
     * - Debounceë¥¼ ì ìš©í•˜ì—¬ ë¶ˆí•„ìš”í•œ ì—°ì‚°ì„ ì¤„ì„
     */
    import Fuse from "fuse.js";

    interface SearchItem {
      title: string;
      description: string;
      url: string;
      tags?: string[];
    }

    // DOM ìš”ì†Œ ì°¸ì¡° (Null Safety)
    const searchInput = document.getElementById(
      "search-input",
    ) as HTMLInputElement | null;
    const searchResults = document.getElementById("search-results");

    // Fuse.js ì¸ìŠ¤í„´ìŠ¤ ë° ë°ì´í„°
    let fuse: Fuse<SearchItem> | null = null;

    /**
     * ì´ˆê¸° ë°ì´í„° ë¡œë“œ (ë¹„ë™ê¸°)
     * ë¹Œë“œ íƒ€ì„ì— ìƒì„±ëœ search.jsonì„ ê°€ì ¸ì˜´
     */
    async function loadSearchIndex() {
      try {
        const response = await fetch("/search.json");
        const searchIndex: SearchItem[] = await response.json();

        // Fuse.js ì´ˆê¸°í™”
        fuse = new Fuse(searchIndex, {
          keys: [
            { name: "title", weight: 0.6 }, // ì œëª©ì— ê°€ì¥ ë†’ì€ ê°€ì¤‘ì¹˜
            { name: "tags", weight: 0.3 }, // íƒœê·¸
            { name: "description", weight: 0.1 }, // ì„¤ëª…
          ],
          threshold: 0.4, // 0.0(ì™„ë²½ ì¼ì¹˜) ~ 1.0(ëª¨ë‘ ì¼ì¹˜). 0.4 ì •ë„ê°€ ì ë‹¹í•¨.
          ignoreLocation: true, // íŒ¨í„´ì´ ì–´ë””ì— ìˆë“  ì°¾ìŒ
          includeScore: true, // ì ìˆ˜ í¬í•¨ (ë””ë²„ê¹…ìš©)
        });

        console.log("Search Index Loaded & Fuse Initialized");
      } catch (error) {
        console.error("Failed to load search index:", error);
      }
    }
    loadSearchIndex();

    /**
     * ë””ë°”ìš´ìŠ¤ í•¨ìˆ˜ (ì„±ëŠ¥ ìµœì í™”)
     */
    function debounce<T extends (...args: unknown[]) => void>(
      func: T,
      delay: number,
    ) {
      let timeoutId: number | undefined;
      return (...args: Parameters<T>) => {
        clearTimeout(timeoutId);
        timeoutId = window.setTimeout(() => func(...args), delay);
      };
    }

    /**
     * ê²€ìƒ‰ ì‹¤í–‰ ë° UI ì—…ë°ì´íŠ¸
     */
    function handleSearch(event: Event) {
      const target = event.target as HTMLInputElement;
      const query = target.value.trim();

      if (!searchResults) return;

      // ê²€ìƒ‰ì–´ ì´ˆê¸°í™” ì‹œ ìˆ¨ê¹€
      if (query.length < 1) {
        searchResults.style.display = "none";
        searchResults.innerHTML = "";
        return;
      }

      if (!fuse) return;

      // Fuse.js ê²€ìƒ‰ ì‹¤í–‰
      const results = fuse.search(query);

      // FuseResult<{item: ...}> í˜•íƒœì—ì„œ itemë§Œ ì¶”ì¶œ
      const matchedPosts = results.map((result) => result.item);

      renderResults(matchedPosts);
    }

    /**
     * ê²°ê³¼ ë Œë”ë§ (DOM ì¡°ì‘)
     */
    function renderResults(posts: SearchItem[]) {
      if (!searchResults) return;

      searchResults.innerHTML = "";
      searchResults.style.display = "block";

      if (posts.length === 0) {
        searchResults.innerHTML = `
                            <div style="padding: 20px; color: #888; text-align: center;">
                                NO DATA FOUND
                            </div>
                        `;
        return;
      }

      // DocumentFragmentë¥¼ ì‚¬ìš©í•˜ì—¬ ë¦¬í”Œë¡œìš° ìµœì†Œí™”
      const fragment = document.createDocumentFragment();

      posts.forEach((post) => {
        const link = document.createElement("a");
        link.className = "search-item";
        link.href = post.url;
        link.innerHTML = `
                            <h4>${post.title}</h4>
                            <p>${post.description}</p>
                        `;
        fragment.appendChild(link);
      });

      searchResults.appendChild(fragment);
    }

    // ì´ë²¤íŠ¸ ë¦¬ìŠ¤ë„ˆ ë“±ë¡ (300ms ë””ë°”ìš´ìŠ¤ ì ìš©)
    if (searchInput) {
      searchInput.addEventListener("input", debounce(handleSearch, 300));
    }

    // ì™¸ë¶€ í´ë¦­ ì‹œ ë‹«ê¸° (UX ê°œì„ )
    document.addEventListener("click", (event: MouseEvent) => {
      const target = event.target as HTMLElement;

      const isClickInside = target.closest(".search-container");

      if (!isClickInside && searchResults) {
        searchResults.style.display = "none";
      }
    });
  </script>

