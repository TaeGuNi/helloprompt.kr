          width: 6px;
        }
        .search-results::-webkit-scrollbar-thumb {
          background: #333;
          border-radius: 3px;
        }
      </style>

      <script>
        /**
         * 검색 기능 제어 스크립트
         * - Debounce를 적용하여 불필요한 연산을 줄임
         * - DOM 조작 최소화
         */

        // DOM 요소 참조 (Null Safety)
        const searchInput = document.getElementById("search-input");
        const searchResults = document.getElementById("search-results");

        // 검색 데이터 캐시
        let searchIndex = [];

        /**
         * 초기 데이터 로드 (비동기)
         * 빌드 타임에 생성된 search.json을 가져옴
         */
        async function loadSearchIndex() {
          try {
            const response = await fetch("/search.json");
            searchIndex = await response.json();
          } catch (error) {
            console.error("Failed to load search index:", error);
          }
        }
        loadSearchIndex();

        /**
         * 디바운스 함수 (성능 최적화)
         * 연속된 이벤트 호출을 제어하여 마지막 호출만 실행
         */
        function debounce(func: any, delay: any) {
          let timeoutId: any;
          return (...args: any[]) => {
            clearTimeout(timeoutId);
            timeoutId = setTimeout(() => func(...args), delay);
          };
        }

        /**
         * 검색 실행 및 UI 업데이트
         */
        function handleSearch(event: any) {
          const target = event.target;
          const query = target.value.trim().toLowerCase();

          if (!searchResults) return;

          // 검색어 초기화 시 숨김
          if (query.length < 2) {
            searchResults.style.display = "none";
            searchResults.innerHTML = "";
            return;
          }

          // 필터링 로직 (제목 또는 태그 일치)
          const matchedPosts = searchIndex.filter((post: any) => {
            const titleMatch = post.title.toLowerCase().includes(query);
            const tagMatch =
              post.tags &&
              post.tags.some((tag: any) => tag.toLowerCase().includes(query));
            return titleMatch || tagMatch;
          });

          renderResults(matchedPosts);
        }

        /**
         * 결과 렌더링 (DOM 조작)
         */
        function renderResults(posts: any) {
          if (!searchResults) return;

          searchResults.innerHTML = "";
          searchResults.style.display = "block";

          if (posts.length === 0) {
            searchResults.innerHTML = `
                            <div style="padding: 20px; color: #888; text-align: center;">
                                NO DATA FOUND
                            </div>
                        `;
            return;
          }

          // DocumentFragment를 사용하여 리플로우 최소화
          const fragment = document.createDocumentFragment();

          posts.forEach((post: any) => {
            const link = document.createElement("a");
            link.className = "search-item";
            link.href = post.url;
            link.innerHTML = `
                            <h4>${post.title}</h4>
                            <p>${post.description}</p>
                        `;
            fragment.appendChild(link);
          });

          searchResults.appendChild(fragment);
        }

        // 이벤트 리스너 등록 (300ms 디바운스 적용)
        if (searchInput) {
          searchInput.addEventListener("input", debounce(handleSearch, 300));
        }

        // 외부 클릭 시 닫기 (UX 개선)
        document.addEventListener("click", (event: any) => {
          const target = event.target as HTMLElement;
          // @ts-ignore
          const isClickInside = target.closest(".search-container");

          if (!isClickInside && searchResults) {
            searchResults.style.display = "none";
          }
        });
      </script>

      <!-- POST LIST (Card Grid Style) -->
      <div class="grid-label">
        <span>LATEST INTELLIGENCE</span>
        <span class="grid-count">PAGE {page.currentPage} / {page.lastPage}</span
        >
      </div>

      <div class="post-grid">
        {
          page.data.map((post: any) => (
            <a href={post.url} class="post-card">
              <h2>{post.frontmatter.title}</h2>
              <p>{post.frontmatter.description}</p>
              <div class="post-meta">
                <span>{post.frontmatter.date}</span>
                {post.frontmatter.tags &&
                  post.frontmatter.tags
                    .slice(0, 2)
                    .map((tag: any) => <span class="tag-pill">#{tag}</span>)}
              </div>
            </a>
          ))
        }
      </div>

      <!-- 페이지네이션 컨트롤 -->
      <div class="pagination">
        {
          page.url.prev ? (
            <a href={page.url.prev} class="nav-btn">
              &lt; PREV
            </a>
          ) : null
        }
        <span class="nav-info">{page.currentPage} / {page.lastPage}</span>
        {
          page.url.next ? (
            <a href={page.url.next} class="nav-btn">
              NEXT &gt;
            </a>
          ) : null
        }
      </div>

      <footer>
        <p>SYSTEM ONLINE // POWERED BY JAY & ZZABBIS</p>
      </footer>
    </div>
  </body>
