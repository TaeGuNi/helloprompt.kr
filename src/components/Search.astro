---
interface Props {
  variant?: "hero" | "compact";
}

const { variant = "hero" } = Astro.props;
---

<div class={`search-container ${variant}`}>
  <div id="pagefind-search" class="pagefind-ui"></div>
</div>

<link href="/pagefind/pagefind-ui.css" rel="stylesheet" />
<script is:inline src="/pagefind/pagefind-ui.js"></script>

<style>
  /* Base Styles */
  .search-container {
    position: relative;
    z-index: 50;
    width: 100%;
  }

  /* Variant: Hero (Home) */
  .search-container.hero {
    max-width: 800px;
    margin: 40px auto 0;
  }

  /* Variant: Compact (Header) */
  .search-container.compact {
    width: 200px;
    margin-right: 15px;
  }

  /* Pagefind Customization (Dark Theme) */
  :global(.pagefind-ui) {
    --pagefind-ui-scale: 0.8;
    --pagefind-ui-primary: #00f3ff;
    --pagefind-ui-text: #eeeeee;
    --pagefind-ui-background: #0a0f14;
    --pagefind-ui-border: #333333;
    --pagefind-ui-tag: #00f3ff;
    --pagefind-ui-border-width: 1px;
    --pagefind-ui-border-radius: 8px;
    --pagefind-ui-image-border-radius: 8px;
    --pagefind-ui-image-box-ratio: 3 / 2;
    --pagefind-ui-font: "Noto Sans KR", sans-serif;
  }

  :global(.pagefind-ui .pagefind-ui__search-input) {
    background-color: rgba(10, 15, 20, 0.8) !important;
    border: 1px solid rgba(0, 243, 255, 0.5) !important;
    color: #fff !important;
    border-radius: 12px !important;
    padding: 16px 24px !important;
    font-size: 1rem !important;
    backdrop-filter: blur(10px);
  }

  :global(.pagefind-ui .pagefind-ui__search-input:focus) {
    border-color: #00f3ff !important;
    box-shadow: 0 0 0 4px rgba(0, 243, 255, 0.1) !important;
    outline: none;
  }

  :global(.pagefind-ui .pagefind-ui__drawer) {
    background: #0a0f14 !important;
    border: 1px solid #333 !important;
    border-radius: 12px !important;
    margin-top: 10px !important;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5) !important;
  }

  :global(.pagefind-ui .pagefind-ui__result) {
    border-bottom: 1px solid #1a1f25 !important;
    padding: 16px !important;
  }

  :global(.pagefind-ui .pagefind-ui__result:hover) {
    background: rgba(0, 243, 255, 0.05) !important;
  }

  :global(.pagefind-ui .pagefind-ui__result-title) {
    color: #fff !important;
    font-weight: 600 !important;
  }

  :global(.pagefind-ui .pagefind-ui__result-excerpt) {
    color: #999 !important;
  }
</style>

<script is:inline>
  window.addEventListener("DOMContentLoaded", () => {
    // @ts-expect-error -- PagefindUI is loaded globally via script tag
    new PagefindUI({
      element: "#pagefind-search",
      showSubResults: true,
      showImages: false,
      translations: {
        placeholder: "SEARCH INTELLIGENCE...",
        zero_results: "No data found for [SEARCH_TERM]",
      },
    });
  });
</script>
