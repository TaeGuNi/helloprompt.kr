      }

      /* --- Prompt Input (Interactive) --- */
      .prompt-input {
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid #00f3ff;
        border-radius: 4px;
        color: #fff;
        padding: 4px 8px;
        font-family: "JetBrains Mono", monospace;
        font-size: 0.9em;
        width: 150px;
        transition: all 0.2s;
        margin: 0 4px;
      }
      .prompt-input:focus {
        background: rgba(0, 243, 255, 0.1);
