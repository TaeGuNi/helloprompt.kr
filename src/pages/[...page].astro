---
import Layout from "../layouts/Layout.astro";
import type { Post } from "../utils/postUtils";

interface Page<T = any> {
  data: T[];
  start: number;
  end: number;
  total: number;
  currentPage: number;
  size: number;
  lastPage: number;
  url: {
    current: string;
    prev: string | undefined;
    next: string | undefined;
  };
}

interface GetStaticPathsOptions {
  paginate: (data: any[], options: { pageSize: number }) => any[];
}

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
  // 1. 한국어 포스트만 가져오기 (eager load)
  const krPosts = Object.values(
    import.meta.glob("./posts/*.md", { eager: true }),
  ) as Post[];

  // 2. 날짜순 정렬
  const sortedPosts = krPosts.sort(
    (a, b) =>
      new Date(b.frontmatter.date).valueOf() -
      new Date(a.frontmatter.date).valueOf(),
  );

  // 3. 페이지네이션 (루트 경로 /)
  return paginate(sortedPosts, { pageSize: 12 });
}

const { page } = Astro.props as { page: Page<Post> };

const frontmatter = {
  title: "HOME",
  description: "AI가 낯선 당신을 위한 가장 친절한 가이드",
  date: new Date().toISOString().split("T")[0],
  author: "Jay & ZZABBIS",
};
---

<Layout frontmatter={frontmatter} isHome={true}>
  <!-- HERO -->
  <div class="hero">
    <h1 class="ai-title">HELLO PROMPT</h1>
    <div class="tech-line"></div>
    <p class="subtitle">AI가 낯선 당신을 위한 가장 친절한 가이드</p>

    <!-- 검색창 추가 -->
    <div class="search-container">
      <input
        type="text"
        id="search-input"
        placeholder="SEARCH INTELLIGENCE..."
        autocomplete="off"
      />
      <div id="search-results" class="search-results"></div>
    </div>
  </div>

  <style is:global>
    .search-container {
      position: relative;
      width: 100%;
      max-width: 800px;
      margin: 40px auto 0;
      z-index: 50;
    }

    #search-input {
      width: 100%;
      box-sizing: border-box;
      padding: 16px 24px;
      background: rgba(10, 15, 20, 0.8);
      border: 1px solid rgba(0, 243, 255, 0.5);
      border-radius: 12px;
      color: #fff;
      font-family: "Noto Sans KR", sans-serif;
      font-size: 1rem;
      text-align: left;
      transition: all 0.2s ease;
      backdrop-filter: blur(10px);
    }
    #search-input:focus {
      outline: none;
      border-color: #00f3ff;
      box-shadow: 0 0 0 4px rgba(0, 243, 255, 0.1);
      background: rgba(10, 15, 20, 0.95);
    }
    #search-input::placeholder {
      color: #666;
      text-align: center;
    }

    /* 검색 결과창 (입력창과 너비 1:1 일치) */
    .search-results {
      position: absolute;
      top: calc(100% + 10px);
      left: 0;
      right: 0;
      width: 100%;
      box-sizing: border-box;

      background: #0a0f14;
      border: 1px solid #333;
      border-radius: 12px;
      max-height: 400px;
      overflow-y: auto;
      z-index: 100;
      display: none;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
    }

    /* 검색 항목 (리스트 아이템) */
    .search-item {
      display: block;
      padding: 16px 20px;
      border-bottom: 1px solid #1a1f25;
      text-decoration: none;
      transition: background 0.1s ease;
    }
    .search-item:last-child {
      border-bottom: none;
    }

    .search-item:hover {
      background: rgba(0, 243, 255, 0.05);
    }

    .search-item h4 {
      margin: 0 0 6px 0;
      color: #fff;
      font-size: 1rem;
      font-weight: 600;
      letter-spacing: -0.02em;
    }
    .search-item p {
      margin: 0;
      color: #999;
      font-size: 0.85rem;
      line-height: 1.5;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .search-results::-webkit-scrollbar {
      width: 6px;
    }
    .search-results::-webkit-scrollbar-thumb {
      background: #333;
      border-radius: 3px;
    }
  </style>

  <script>
    /**
     * 검색 기능 제어 스크립트
     * - Debounce를 적용하여 불필요한 연산을 줄임
     * - DOM 조작 최소화
     */

    interface SearchItem {
      title: string;
      description: string;
      url: string;
      tags?: string[];
    }

    // DOM 요소 참조 (Null Safety)
    const searchInput = document.getElementById(
      "search-input",
    ) as HTMLInputElement | null;
    const searchResults = document.getElementById("search-results");

    // 검색 데이터 캐시
    let searchIndex: SearchItem[] = [];

    /**
     * 초기 데이터 로드 (비동기)
     * 빌드 타임에 생성된 search.json을 가져옴
     */
    async function loadSearchIndex() {
      try {
        const response = await fetch("/search.json");
        searchIndex = await response.json();
      } catch (error) {
        console.error("Failed to load search index:", error);
      }
    }
    loadSearchIndex();

    /**
     * 디바운스 함수 (성능 최적화)
     * 연속된 이벤트 호출을 제어하여 마지막 호출만 실행
     */
    function debounce<T extends (...args: any[]) => void>(
      func: T,
      delay: number,
    ) {
      let timeoutId: number | undefined;
      return (...args: Parameters<T>) => {
        clearTimeout(timeoutId);
        timeoutId = window.setTimeout(() => func(...args), delay);
      };
    }

    /**
     * 검색 실행 및 UI 업데이트
     */
    function handleSearch(event: Event) {
      const target = event.target as HTMLInputElement;
      const query = target.value.trim().toLowerCase();

      if (!searchResults) return;

      // 검색어 초기화 시 숨김
      if (query.length < 2) {
        searchResults.style.display = "none";
        searchResults.innerHTML = "";
        return;
      }

      // 필터링 로직 (제목 또는 태그 일치)
      const matchedPosts = searchIndex.filter((post) => {
        const titleMatch = post.title.toLowerCase().includes(query);
        const tagMatch =
          post.tags &&
          post.tags.some((tag) => tag.toLowerCase().includes(query));
        return titleMatch || tagMatch;
      });

      renderResults(matchedPosts);
    }

    /**
     * 결과 렌더링 (DOM 조작)
     */
    function renderResults(posts: SearchItem[]) {
      if (!searchResults) return;

      searchResults.innerHTML = "";
      searchResults.style.display = "block";

      if (posts.length === 0) {
        searchResults.innerHTML = `
                            <div style="padding: 20px; color: #888; text-align: center;">
                                NO DATA FOUND
                            </div>
                        `;
        return;
      }

      // DocumentFragment를 사용하여 리플로우 최소화
      const fragment = document.createDocumentFragment();

      posts.forEach((post) => {
        const link = document.createElement("a");
        link.className = "search-item";
        link.href = post.url;
        link.innerHTML = `
                            <h4>${post.title}</h4>
                            <p>${post.description}</p>
                        `;
        fragment.appendChild(link);
      });

      searchResults.appendChild(fragment);
    }

    // 이벤트 리스너 등록 (300ms 디바운스 적용)
    if (searchInput) {
      searchInput.addEventListener("input", debounce(handleSearch, 300));
    }

    // 외부 클릭 시 닫기 (UX 개선)
    document.addEventListener("click", (event: MouseEvent) => {
      const target = event.target as HTMLElement;

      const isClickInside = target.closest(".search-container");

      if (!isClickInside && searchResults) {
        searchResults.style.display = "none";
      }
    });
  </script>

  <!-- POST LIST (Card Grid Style) -->
  <div class="grid-label">
    <span>LATEST INTELLIGENCE</span>
    <span class="grid-count">PAGE {page.currentPage} / {page.lastPage}</span>
  </div>

  <div class="post-grid">
    {
      page.data.map((post) => (
        <a href={post.url} class="post-card">
          <h2>{post.frontmatter.title}</h2>
          <p>{post.frontmatter.description}</p>
          <div class="post-meta">
            <span>{post.frontmatter.date}</span>
            {post.frontmatter.tags &&
              post.frontmatter.tags
                .slice(0, 2)
                .map((tag) => <span class="tag-pill">#{tag}</span>)}
          </div>
        </a>
      ))
    }
  </div>

  <!-- 페이지네이션 컨트롤 -->
  <div class="pagination">
    {
      page.url.prev ? (
        <a href={page.url.prev} class="nav-btn">
          &lt; PREV
        </a>
      ) : null
    }
    <span class="nav-info">{page.currentPage} / {page.lastPage}</span>
    {
      page.url.next ? (
        <a href={page.url.next} class="nav-btn">
          NEXT &gt;
        </a>
      ) : null
    }
  </div>
</Layout>

<style>
  /* --- HERO SECTION (Refined) --- */
  .hero {
    margin-bottom: 120px; /* 하단 여백 대폭 추가 */
    position: relative;
    text-align: center;
    padding-top: 60px; /* 상단 여백 추가 */
    display: flex;
    flex-direction: column;
    align-items: center; /* 확실한 중앙 정렬 */
  }

  .ai-title {
    font-family: "Orbitron", sans-serif;
    font-size: 5rem; /* PC에서 더 크게 */
    font-weight: 900;
    letter-spacing: 4px;
    margin: 0 0 30px 0;
    line-height: 1.1;
    color: #fff;
    text-transform: uppercase;

    /* 네온 효과 강화 */
    text-shadow: 0 0 30px rgba(0, 243, 255, 0.4);
    background: linear-gradient(180deg, #fff, #aaa); /* 메탈릭 그라데이션 */
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .tech-line {
    width: 150px;
    height: 4px;
    background: #00f3ff;
    margin: 0 auto 30px; /* 중앙 정렬 및 여백 */
    box-shadow: 0 0 20px #00f3ff;
    border-radius: 2px;
  }

  p.subtitle {
    font-size: 1.4rem;
    color: #ccc;
    margin: 0 0 60px 0; /* 검색창과의 간격 */
    font-weight: 300;
    letter-spacing: 1px;
    opacity: 0.8;
  }

  @media (max-width: 768px) {
    .ai-title {
      font-size: 3rem;
      letter-spacing: 1px;
    }
    .hero {
      margin-bottom: 80px;
      padding-top: 40px;
    }
    p.subtitle {
      font-size: 1.1rem;
      margin-bottom: 40px;
    }
  }

  /* --- POST GRID SECTION --- */
  .grid-label {
    text-align: left;
    font-family: "Orbitron", sans-serif;
    color: #00f3ff;
    font-size: 1.2rem;
    margin-bottom: 20px;
    border-bottom: 1px solid rgba(0, 243, 255, 0.3);
    padding-bottom: 10px;
    display: flex;
    justify-content: space-between;
  }
  .grid-count {
    background: #00f3ff;
    color: #000;
    padding: 2px 8px;
    border-radius: 4px;
    font-size: 0.8rem;
  }

  .post-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 25px;
    text-align: left;
  }

  .post-card {
    background: rgba(10, 20, 30, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 25px;
    transition: all 0.3s ease;
    text-decoration: none;
    display: flex;
    flex-direction: column;
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(5px);
  }

  .post-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: #333;
    transition: background 0.3s;
  }

  .post-card:hover {
    transform: translateY(-5px);
    border-color: #00f3ff;
    box-shadow: 0 5px 20px rgba(0, 243, 255, 0.15);
  }
  .post-card:hover::before {
    background: #00f3ff;
  }

  .post-card h2 {
    color: #fff;
    font-size: 1.2rem;
    margin: 0 0 10px 0;
    font-weight: 700;
    line-height: 1.4;
  }

  .post-card p {
    color: #aaa;
    font-size: 0.9rem;
    flex-grow: 1;
    margin-bottom: 20px;
  }

  .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.8rem;
    font-family: "JetBrains Mono", monospace;
    color: #666;
  }

  .tag-pill {
    background: rgba(0, 243, 255, 0.1);
    color: #00f3ff;
    padding: 2px 8px;
    border-radius: 4px;
    border: 1px solid rgba(0, 243, 255, 0.2);
  }

  /* --- PAGINATION --- */
  .pagination {
    margin-top: 60px;
    display: flex;
    justify-content: center;
    gap: 20px;
  }
  .nav-btn {
    background: transparent;
    border: 1px solid #00f3ff;
    color: #00f3ff;
    padding: 10px 20px;
    text-decoration: none;
    font-family: "Orbitron", sans-serif;
    font-size: 0.9rem;
    border-radius: 4px;
    transition: all 0.2s;
  }
  .nav-btn:hover {
    background: #00f3ff;
    color: #000;
    box-shadow: 0 0 15px rgba(0, 243, 255, 0.4);
  }
  .nav-info {
    color: #666;
    font-family: "JetBrains Mono", monospace;
    align-self: center;
  }

  @media (max-width: 600px) {
    .ai-title {
      font-size: 2.5rem;
    }
  }
</style>
