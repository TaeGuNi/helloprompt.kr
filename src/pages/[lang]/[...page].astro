  }

  .tag-pill {
    background: rgba(0, 243, 255, 0.1);
    color: #00f3ff;
    padding: 2px 8px;
    border-radius: 4px;
    border: 1px solid rgba(0, 243, 255, 0.2);
  }

  /* --- PAGINATION --- */
  .pagination {
    margin-top: 60px;
    display: flex;
    justify-content: center;
    gap: 20px;
  }
  .nav-btn {
    background: transparent;
    border: 1px solid #00f3ff;
    color: #00f3ff;
    padding: 10px 20px;
    text-decoration: none;
    font-family: "Orbitron", sans-serif;
    font-size: 0.9rem;
    border-radius: 4px;
    transition: all 0.2s;
  }
  .nav-btn:hover {
    background: #00f3ff;
    color: #000;
    box-shadow: 0 0 15px rgba(0, 243, 255, 0.4);
  }
  .nav-info {
    color: #666;
    font-family: "JetBrains Mono", monospace;
    align-self: center;
  }

  @media (max-width: 600px) {
    .ai-title {
      font-size: 2.5rem;
    }
  }
</style>
