---
/**
 * Main Layout Component
 * - Î™®Îì† ÌéòÏù¥ÏßÄÏùò Í≥µÌÜµ Î†àÏù¥ÏïÑÏõÉ (Ìó§Îçî, Ìë∏ÌÑ∞, Î©îÌÉÄ ÌÉúÍ∑∏)
 * - ÏÇ¨Ïù¥Î≤ÑÌéëÌÅ¨ ÌÖåÎßà Ïä§ÌÉÄÏùºÎßÅ Ìè¨Ìï®
 */

export interface Props {
  frontmatter: {
    title: string;
    description: string;
    date: string;
    updatedDate?: string;
    author: string;
    category?: string;
    tags?: string[];
    lang?: string;
  };
  headings?: { depth: number; slug: string; text: string }[];
  isHome?: boolean;
}

const { frontmatter, headings, isHome = false } = Astro.props;

import LanguageSwitcher from "../components/LanguageSwitcher.astro";
import { uiStrings } from "../utils/ui-translation";
import { determineCurrentLang } from "../utils/i18nUtils";
import BaseHtml from "../components/BaseHtml.astro";

const currentLang = determineCurrentLang(Astro.url.pathname, frontmatter.lang);
const t = uiStrings[currentLang] || uiStrings["ko"];

// Ï∂îÏ≤ú Í∏Ä (Related Posts) Î°úÏßÅ
const globbedPosts = import.meta.glob("/src/pages/**/posts/*.md", {
  eager: true,
});

const relatedPosts = Object.entries(globbedPosts)
  .filter(([path]) => {
    if (currentLang === "ko") {
      // ÌïúÍµ≠Ïñ¥ Ìè¨Ïä§Ìä∏Îäî /src/pages/posts/ Ïóê ÏúÑÏπò (Îã§Î•∏ Ïñ∏Ïñ¥ Ìè¥Îçî Ï†úÏô∏)
      return (
        path.includes("/src/pages/posts/") &&
        !path.match(/\/src\/pages\/[^/]+\/posts\//)
      );
    } else {
      // Îã§Î•∏ Ïñ∏Ïñ¥Îäî /src/pages/[lang]/posts/ Ïóê ÏúÑÏπò
      return path.includes(`/src/pages/${currentLang}/posts/`);
    }
  })
  .map(([_, post]) => post as any)
  .filter(
    (post: any) =>
      post.frontmatter.category === frontmatter.category &&
      post.frontmatter.title !== frontmatter.title,
  )
  .sort(() => 0.5 - Math.random())
  .slice(0, 3);
import { formatDate } from "../utils/dateUtils";

