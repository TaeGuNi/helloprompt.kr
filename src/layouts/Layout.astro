      }
      .prompt-input::placeholder {
        color: rgba(0, 243, 255, 0.5);
      }

      /* --- Quote Wrapper (Prompt Box - High Emphasis) --- */
      .quote-wrapper {
        position: relative;
        margin: 50px 0;
        background: rgba(0, 243, 255, 0.03); /* ì•„ì£¼ ì—°í•œ í˜•ê´‘ ë°°ê²½ */
        border: 3px dashed #00f3ff; /* ì¨í•œ í˜•ê´‘ìƒ‰ ì ì„  */
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(0, 243, 255, 0.1);
        transition: all 0.3s;
      }

      .quote-wrapper:hover {
        background: rgba(0, 243, 255, 0.05);
        box-shadow: 0 0 40px rgba(0, 243, 255, 0.2);
        transform: translateY(-2px);
      }

      /* ê°•ë ¥í•œ í—¤ë” ë¼ë²¨ */
      .quote-wrapper::before {
        content: "âœ‚ï¸ COPY THIS PROMPT";
        position: absolute;
        top: -18px; /* ìœ„ì¹˜ ì¡°ì • */
